# Server Configuration
PORT=3000
HOST=0.0.0.0
BASE_URL=http://localhost

# File Paths
BASE_VIDEO_PATH=./assets/base_video.mp4
BASE_AUDIO_PATH=./assets/base_audio.wav
OUTPUT_DIR=./generated_videos

# Queue Configuration
MIN_QUEUE_SIZE=3
MAX_QUEUE_SIZE=10

# LLM Service Selection (only one should be true)
USE_OPENROUTER=true
USE_CLOUDY_API=false
# OpenAI is default if none are true

# LLM API Keys
OPENAI_API_KEY=your_openai_api_key
OPENROUTER_API_KEY=your_openrouter_api_key
OPENROUTER_GENERATION_MODEL=deepseek/deepseek-chat-v3-0324:free
OPENROUTER_EVALUATION_MODEL=openai/gpt-4o-mini
OPENROUTER_SITE_URL=your_site_url
OPENROUTER_SITE_NAME=your_site_name

# TTS Service Selection (only one should be true)
USE_ZONOS_TTS_LOCAL=true
USE_ZONOS_TTS_API=false
USE_ELEVENLABS=false
# Zonos Local is default if none are true

# TTS API Keys
ZONOS_API_KEY=your_zonos_api_key
ELEVENLABS_API_KEY=your_elevenlabs_api_key

# Zonos Configuration
ZONOS_TTS_ENDPOINT=/tts
ZONOS_TTS_PORT=8001

# Video Sync Service Selection (only one should be true)
USE_FAL_LATENT_SYNC=false
# Local is default if false

# Video Sync API Keys
FAL_KEY=your_fal_api_key
SYNC_LABS_KEY=your_sync_labs_key

# LatentSync Configuration
LATENTSYNC_ENDPOINT=/sync
LATENTSYNC_PORT=8002

# Media Stream Service Selection
USE_OBS=false
# Web client is default if false

# OBS WebSocket Configuration
OBS_WEBSOCKET_HOST=localhost
OBS_WEBSOCKET_PORT=4455
OBS_WEBSOCKET_PASSWORD=your_password
OBS_BASE_SCENE=Base Scene
OBS_GENERATED_SCENE=Generated Scene
OBS_GENERATED_SOURCE=Generated Video